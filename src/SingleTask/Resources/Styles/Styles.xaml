<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  GLOBAL FONTS  -->
    <!--  Aliases defined in MauiProgram.cs  -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryText}" />
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource Gray300}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource CardSurface}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="FontFamily" Value="InterBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                            <Setter Property="TextColor" Value="{StaticResource Gray500}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!--  CUSTOM TYPOGRAPHY  -->
    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="FontFamily" Value="PlayfairDisplayBold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="TextColor" Value="{StaticResource InkBlack}" />
    </Style>

    <Style x:Key="SubHeadline" TargetType="Label">
        <Setter Property="FontFamily" Value="PlayfairDisplay" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource InkGrey}" />
    </Style>

    <Style x:Key="LargeTitleLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="PlayfairDisplayBold" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource InkBlack}" />
    </Style>

    <Style x:Key="TimerPlaceholderStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="64" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!--  CUSTOM CONTROLS  -->

    <!--  Round Action Button (Done)  -->
    <Style x:Key="RoundButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource CardSurface}" />
        <Setter Property="FontFamily" Value="InterBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="HeightRequest" Value="80" />
        <Setter Property="WidthRequest" Value="80" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="{StaticResource Primary}"
                    Opacity="0.4"
                    Radius="8"
                    Offset="0,4" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Primary Action Button (Rounded, Shadow)  -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource CardSurface}" />
        <Setter Property="FontFamily" Value="InterBold" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Padding" Value="24,0" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="{StaticResource Primary}"
                    Opacity="0.4"
                    Radius="8"
                    Offset="0,4" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Card Style (White with soft shadow)  -->
    <Style x:Key="CardSurfaceStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardSurface}" />
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 24" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="#1a000000"
                    Opacity="0.1"
                    Radius="12"
                    Offset="0,6" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  PAGE BACKGROUND  -->
    <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource PaperBackground}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!--  DEFAULT OVERRIDES  -->
    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="TextColor" Value="{StaticResource InkBlack}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource InkGrey}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Primary}" />
    </Style>

</ResourceDictionary>
